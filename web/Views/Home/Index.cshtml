@{
    ViewData["Title"] = "Telepresence";
}

<div class="jumbotron">
    <h1 class="display-3">Bionic Christofer</h1>
    <p class="lead">"We can make him better than he was. Better, stronger, faster."</p>
    <hr class="my-4">
    <button id="moveLeft" type="button" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-arrow-left"></span> Move left</button>
    <button id="moveRight" type="button" class="btn btn-primary btn-lg" style="margin-left: 30px">Move right <span class="glyphicon glyphicon-arrow-right"></span></button>
</div>

@section Scripts {
    <script>
        $(function() {
            $('#moveLeft').click(function() {
                $.post("api/moveleft");
            });
            $('#moveRight').click(function() {
                $.post("api/moveright");
            });
        });
    </script>
}